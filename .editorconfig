# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{html,css,scss,json,yml,xml,toml}]
indent_style = space
indent_size = 4

[*.py]
indent_size = 4

[Makefile]
indent_style = tab
